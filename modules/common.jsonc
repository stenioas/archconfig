    "ttf-jetbrains-mono", // Font family for developers.
    "ttf-jetbrains-mono-nerd", // JetBrains Mono with glyphs (Nerd Font).

    // PIPEWIRE AUDIO
    "pipewire", // Low-latency audio and video processing framework.
